model Option {
    name  String @id
    value Json
}

model Seat {
    id        String    @id @default(cuid())
    createdAt DateTime  @default(now())
    updatedAt DateTime? @updatedAt

    public Boolean @default(true)

    name  String
    owner User?
}

model ClassGroup {
    id        String    @id @default(cuid())
    createdAt DateTime  @default(now())
    updatedAt DateTime? @updatedAt

    name String
    year Int

    hidden Boolean

    classes Class[]
}

model Class {
    id        String    @id @default(cuid())
    createdAt DateTime  @default(now())
    updatedAt DateTime? @updatedAt

    name String

    group   ClassGroup @relation(fields: [groupId], references: [id], onDelete: Cascade)
    groupId String

    hidden Boolean

    users User[]
}
